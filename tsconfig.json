{
  "compilerOptions": {
    "jsx": "react-jsx", // Habilita JSX compatible con React 17+
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@utils/*": ["utils/*"],
      "@hooks/*": ["hooks/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@interfaces/*": ["interfaces/*"]
    }
  }
}
